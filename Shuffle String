class Solution {
    public String restoreString(String s, int[] indices) {
        String str="";
        char[] arr=new char[s.length()];
        for(int i=0;i<s.length();i++){
            arr[indices[i]]=s.charAt(i);
        }
        for(char a:arr){
            str+=a;
        }
        return str;
    }
}
